<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" type="text/css" href="css/login_form.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/login_form.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <% if (!enterCode && !setPassword){ %>

                            <form id="login-form" action="/forgot-password" method="post" role="form"
                                  style="display: block;">
                                <div class="form-group" >
                                    <input type="text" name="email" id="login-email" tabindex="1" class="form-control"
                                           placeholder="Email" value="">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input style="background-color: #8fa1e6; font-size: 16px;" type="submit"
                                                   name="login-submit" id="login-submit" tabindex="4"
                                                   class="form-control btn btn-login" value="Send confirmation mail">
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <% } %>
                            <% if(enterCode && !setPassword){ %>

                            <form id="code-form" action="/check-code" method="post" role="form" style="display: block;">
                                <div class="form-group" style="display: none;">
                                    <input type="text" name="email" id="login-email" tabindex="1" class="form-control"
                                           placeholder="Email" value="<%= email ? email : '' %>">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="code" id="secure_code" tabindex="1" class="form-control"
                                           placeholder="Secure code" value="">
                                </div>
                                <% if(errors.length > 0){ %>
                                <div style="color:red">Incorrect code,pleas try again.</div>
                                <% } %>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input style="background-color: #8fa1e6; font-size: 16px;" type="submit"
                                                   name="login-submit" id="login-submit" tabindex="4"
                                                   class="form-control btn btn-login" value="Check code">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <% } %>

                            <% if(setPassword){ %>
                            <form id="set-password-form" name = "set-password-form" action="/set-password" method="post" role="form"
                                  style="display: block;"
                                  onsubmit="return validateForm('set-password-form')">
                                <div class="form-group" style="display: none;">
                                    <input type="text" name="email" id="login-email" tabindex="1" class="form-control"
                                           placeholder="Email" value="<%= email ? email : '' %>">
                                </div>
                                <div id="email-error"></div>
                                <div class="form-group">
                                    <input type="password" name="new_password" id="password" tabindex="1"
                                           class="form-control"
                                           placeholder="New password" value="">
                                </div>
                                <div id="password-error"></div>
                                <div class="form-group">
                                    <input type="password" name="confirm-password" id="confirm-password"
                                           tabindex="2" class="form-control"
                                           placeholder="Confirm Password">
                                </div>
                                <div id="confirm-password-error"></div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input style="background-color: #8fa1e6; font-size: 16px;" type="submit"
                                                   name="login-submit" id="login-submit" tabindex="4"
                                                   class="form-control btn btn-login" value="Change password">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <% } %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/validation.js"></script>

</body>
</html>